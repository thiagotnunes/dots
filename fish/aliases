# make it colorful
alias ls "ls --color=auto"
alias grep "grep --color=auto"

# make it simpler
alias .. "cd .."
alias ... "cd ../../"
alias .... "cd ../../.."
alias cd "cd ~"

# top
alias cpu "top -o cpu"
alias mem "top -o rsize" # memory

# set move and copy to be verbose
alias mv "mv -v"
alias cp "cp -v"

# Aliases the binaries to shorter names
alias vi "vim"
alias g "git"

# Quickly go into the directories
alias gw "cd $WORKSPACE"
