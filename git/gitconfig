[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty

[alias]
  aa = add --all
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  ds = diff --staged
  ss = status -s
  ci = commit
  p = push
  plr = pull --rebase
  unstage = reset HEAD --
[merge]
  tool = vimdiff
[credential]
  helper = osxkeychain
[push]
  default = current
[pull]
  default = current

