[user]
  name = Thiago Nunes
  email = thiagotnunes@gmail.com

[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow
  frag = cyan
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty

[alias]
  aa = add --all
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  d = diff
  ds = diff --staged
  st = status
  ss = status -s
  ci = commit
  co = checkout
  p = push
  plr = pull --rebase
  unstage = reset HEAD --
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  bmd = "!git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d"
[merge]
  tool = vimdiff
[credential]
	helper = osxkeychain
[push]
	default = current
[pull]
	default = current
