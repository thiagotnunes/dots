[user]
  name = Thiago Nunes 
  email = thiagotnunes@gmail.com

[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow 
  frag = cyan 
  old = red
  new = green 

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty

[alias]
  aa = add --all
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  lg = log --graph --pretty=format:'%C(yellow)%h %Cblue%aN %Cgreen%ar %Creset%s'
  s = show
  d = diff
  ds = diff --staged
  st = status
  ss = status -s
  ci = commit
  co = checkout
  p = push
  unstage = reset HEAD --
  pr = pull --rebase
[merge]
  tool = vimdiff
[credential]
	helper = osxkeychain
[push]
	default = simple
